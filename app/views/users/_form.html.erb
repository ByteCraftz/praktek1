<%= form_with(model: @user, local: true, html: { enctype: "multipart/form-data" }) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_field :bio %>
  </div>

  <div>
    <%= form.label :avatar %>
    <%= form.file_field :avatar %> <%# This is for single image upload %>
  </div>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %> <%# This is for multiple image upload %>
  </div>

  <div>
    <%= form.label :content %>  <%# This is the rich text editor %>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
